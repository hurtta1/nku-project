<!DOCTYPE html>
<html> 
<div class="page-header">
  <h1>League Players</h1>
  
  <th><button class="btn btn-default btn-lg" type="button"><%=link_to "Add to Team", new_team_path %></button></th>
</div>
 
  <div class="wrapper">
    <table class="player table">
      <thead>
        <tr>
          <th>Player Name</th>
          <th>Team/Church</th>
        </tr>
      </thead>
  
      <tbody>
        <% @player.each do |player| %>
        <% if !player.team.blank? %> 
        <tr id="<%= dom_id(player) %>" class="list-item">
              <td><%= player.name %></td>
              <td><%= player.team %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>

  
<div id="unasigned-players">
  <h3>Unassigned Player List   <%=select_tag 'Available Church Teams[]', options_from_collection_for_select(Team.all, :name, :name) %></h3>
   <% @player.each do |player| %>
    <% if player.team.blank? %> 
      <div id="<%=dom_id(player)%>" class="list-item">
        <div class="info-block">
          <h4><%= player.name %></h4>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
  <% end %>