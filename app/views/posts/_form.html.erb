<%= form_for [@post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> present.  Please address the following errors:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Announcement %>
    <%= f.text_area :body, :size => "100%x15%", class: 'form-control' %>
  </div>

  <%= f.submit "Post Announcement", class: 'btn btn-primary' %>
<% end %>