<div class="page-header">
  <h1>League Teams<button class="btn btn-default btn-lg pull-right" type="button"><%=link_to "Submit Team Application", new_team_path %></button></h1>
</div>

<% @team.each do |team| %>
<div class="container">
  <div class="row">
    <div class="col-md-10">   
      <div class="panel">
        <div class="panel-body">  
		      <div class="row"> 
            <div class="col-md-10 col-sm-9">
              <h2><%= 'Team Name: ' %><%= team.name %></h2>
              <div class="row">
                <div class="col-xs-9">
                  <h4><%= 'Team Church: ' %><%= team.cname %></h4>
                  </div>
                <div class="col-md-5">
                <% if !current_official %>
                   <div class="info-block">
                    <h4><%= 'Team coach: ' %><%= team.coach %></h4>
                    <h4><%= 'Number of Players: ' %><%= team.numplayers %></h4>
                    <h4><%= 'Concact Info: ' %><%= team.contact %></h4></div>
                   </div>
                <% end %>
              </div>
            </div>
          </div>
          <hr>  
        </div>
      </div>
   	</div>
  </div>
</div> 
<% end %> 